<% if (val) { %>
<tr class="row">
  <th class="col-2">
    <a
      class="text-dark"
      href="/boards/home?user=<%= val.User.name %>&id=<%= val.userId %>&page=0"
    >
      <%= val.User.name %>
    </a>
  </th>
  <td class="col-7"><%= val.message %></td>
  <% const d = new Date(val.createdAt); const year = ("0000" +
  d.getFullYear()).slice(-4); const month = ("00" + (d.getMonth() +
  1)).slice(-2); const date = ("00" + d.getDate()).slice(-2); const hours =
  ("00" + d.getHours()).slice(-2); const minutes = ("00" +
  d.getMinutes()).slice(-2); const seconds = ("00" + d.getSeconds()).slice(-2);
  const dstr = `${year}-${month}-${date} ${hours}:${minutes}:${seconds}`; %>
  <td class="col-3"><%= dstr %></td>
</tr>
<% } %>
